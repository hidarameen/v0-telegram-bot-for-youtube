# نسخ هذا الملف إلى .env وتعبئة البيانات الحقيقية

# توكن بوت تلقرام (احصل عليه من @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# بيانات مشروع Google Cloud Console
YOUTUBE_CLIENT_ID=your_google_client_id_here
YOUTUBE_CLIENT_SECRET=your_google_client_secret_here

# عنوان إعادة التوجيه (غيّره حسب بيئة النشر)
REDIRECT_URI=http://localhost:8080/callback

# متغيرات اختيارية لـ Northflank
NORTHFLANK_API_TOKEN=your_northflank_api_token_here
NORTHFLANK_PROJECT_ID=youtube-telegram-bot

# إعدادات قاعدة البيانات (اختياري)
# إضافة متغير قاعدة البيانات PostgreSQL
# رابط قاعدة بيانات PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database_name

# مثال:
# DATABASE_URL=postgresql://user:pass@localhost:5432/youtube_bot_db

# إعدادات أخرى
DEBUG=false
LOG_LEVEL=INFO
